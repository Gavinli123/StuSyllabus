/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container{
  background-color: #2785cd;
}
.imagestyle{ 
  margin-right: 10rpx;
  margin-top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.news_info{
  font-size: 30rpx;
  width:100%;
  display:flex;
  margin-bottom: 30rpx;
  border-bottom:2px solid #efefef;
}
.date_group{
  display:flex;
}
.left{
  width:70%;
}
.right{
  text-align: right;
  padding-right: 20rpx;
  width:30%;
}
.news_title{
  font-size: 30rpx;
  padding-top: 0rpx;
  padding-left: 25rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical; 
}
.s_style{
  height: 1000rpx;
}
.url.lightgray{
  color: gray;
  padding-left: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.search{  
  width: 100%;  
  display: flex;
}  
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  display: flex;
  background-color: white;
}  
.search_arr input{    
  height: 60rpx;  
  border-radius: 5px;  
}  
.bc_text {  
  line-height: 68rpx;  
  height: 68rpx;  
  margin-top: 34rpx;  
}  
.page_row{  
  display: flex;  
  flex-direction: row;
  width:70%;
    
}  
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center;  
}  
.topp{
  width: 100%;
  background-color: #2785cd;
  display: flex;
  padding-bottom: 10rpx;
}
.citystyle{
  color: white;
  width:20%;
  font-size: 40rpx;
  text-align: center;
  margin-left: 50rpx;
  margin-right: 30rpx;
}
.author.blue{
  color: blue;
}
.device.lightgray{
  color: gray;
  padding-top: 50rpx;
}

.content-ending{
  width: 100%;
  color: #bbb;
  text-align: center;
  margin: 30rpx auto;
}