page{
  background: #ebebeb;
}
.itemPanel{
  background:#fff;
  width:95%;
  margin-left:2.5%;
  margin-top:25rpx;
  height:auto;
  display:flex;
  flex-direction:column;
  border-radius: 10rpx;
}
.title{
  font-size:28rpx;
  color:#f44336;
  text-align:center;
  margin-left:5%;
  width:90%;
  padding:10rpx 0;
  border-bottom:1rpx solid #999;
}
.middlePanel{
  width:90%;
  margin-left:5%;
  display:flex;
  padding:20rpx 0;
}
.textContainer{
  display:flex;
  flex-direction:column;
  text-align:center;
  width:33.3%;
}
.button{
  width:95%;
  margin-left:2.5%;
  display:flex;
  justify-content:center;
  margin-top:20rpx;
  margin-bottom:20rpx;
}