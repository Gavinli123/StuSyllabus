<!--pages/discover/contentDetail/contentDetail.wxml-->
<view class='showItem'>
  <view wx:if="{{category!='wall'}}" class='userInfo' hover-class='bg_grey'>
    <image src="{{userImagesUrl}}" class='avatar' catchtap='previewIcon'></image>
    <view class='right-info'>
      <text class='nickname'>{{nickName}}</text>
      <text class='time'>{{time}}</text>
    </view>
  </view>
  <view wx:if="{{category!='wall'}}" style='margin:0 0 20rpx 5%;' class='itemTitle'>
    <text>{{title}}</text>
  </view>
  <view style='margin:0 0 20rpx 5%;width:90%' hover-class='bg_grey'>
    <text class='itemContent'>{{content}}</text>
  </view>
  <view wx:if="{{category=='things'}}" style='margin:0 0 20rpx 5%;width:90%' hover-class='bg_grey'>
    <text class='itemContent'>{{yishi?'遗失':'拾取'}}地点：{{position}}</text>
  </view>
  <view wx:if="{{category=='things'}}" style='margin:0 0 20rpx 5%;width:90%' hover-class='bg_grey'>
    <text class='itemContent'>联系方式：{{phone}}</text>
  </view>
  <view wx:if="{{imgs.length>0&&category!='wall'}}" style='width:90%;margin-left:5%;display:flex;flex-direction:row;'>
    <view class="issues-photo-item" wx:for="{{imgs}}" wx:key="*this_pic" wx:for-item="pics" wx:for-index="pics_index">
      <image src="{{pics}}" style='height:140rpx;width:140rpx;margin-right:5rpx; ' mode="aspectFill" data-index="{{pics_index}}" data-id="{{index}}" bindtap="previewPhoto"></image>
    </view>
  </view>
</view>

<view class='box'>
  <view style='position:absolute;left:30rpx;' class='{{comment?"selected":"normal"}}' hover-class='bg_grey' bindtap='change'>评论 2203</view>
  <view style='position:absolute;right:30rpx;' class='{{!comment?"selected":"normal"}}' hover-class='bg_grey' bindtap='change'>赞 3093</view>
</view>

<!--评论-->
<view wx:if="{{comment}}" class='chooseMode' style='width:100%;height:80rpx;margin-top:5rpx;background:#fff;'>
  <view style='height:80rpx;display:flex;position:absolute;right:40rpx;align-items:center;' bindtap='changeMode'>
    <image style='width:30rpx;height:30rpx;' src='../../../image/xiangshang.png'></image>
    <text style='font-size:28rpx;color:#00f;margin-left:10rpx;'>{{heat?"按热度":"按时间"}}</text>
  </view>
</view>
<view wx:if="{{comment}}" style='width:100%;height:auto;display:flex;flex-direction:column;background:#fff;margin-bottom:80rpx;'>
  <block wx:for="{{comment_list}}" wx:key="*comment_list">
    <view style='display:flex;height:auto;margin-top:20rpx;'>
      <view style='width:15%;'>
        <image src='{{item.userImageUrl}}' style='width:60rpx;height:60rpx;border-radius:50%;margin-top:20rpx;margin-left:20rpx;'></image>
      </view>
      <view style='width:85%;height:auto;display:flex;flex-direction:column;border-bottom:1rpx solid #efefef;'>
        <view style='font-size:28rpx;color:#f00;'>{{item.nickname}}</view>
        <view class='itemContent' style='width:90%;'>{{item.content}}</view>
        <view style='background:#f6f6f6;width:90%;'>
          <text style='color:#00f;font-size:25rpx;margin-left:20rpx;'>菲一日之晗</text>
          <text style='color:#000;font-size:25rpx;'>等人 </text>
          <text style='color:#00f;font-size:25rpx;'>共{{item.reply}}条回复 ></text>
        </view>
        <view style='display:flex;align-items:center;margin-top:20rpx;margin-bottom:10rpx;'>
          <text style='color:#666;font-size:25rpx;'>{{item.time}}</text>
          <image style='width:35rpx;height:35rpx;position:absolute;right:200rpx;' src='../../../image/pinglun.png'></image>
          <image style='width:35rpx;height:35rpx;position:absolute;right:100rpx;' src='../../../image/dianzan.png'></image>
          <text style='color:#666;font-size:25rpx;position:absolute;right:70rpx;'>{{item.likes}}</text>
        </view>
      </view>
    </view>
  </block>
</view>

<!--点赞-->
<view wx:if="{{!comment}}" style='width:100%;height:auto;display:flex;flex-direction:column;background:#fff;margin-bottom:80rpx;margin-top:5rpx;'>
  <block wx:for="{{likesList}}" wx:key="*likesList">
    <view style='display:flex;height:auto;margin-top:20rpx;align-items:center;'>
      <view style='width:15%;'>
        <image src='{{item.userImageUrl}}' style='width:60rpx;height:60rpx;border-radius:50%;margin-top:20rpx;margin-left:20rpx;'></image>
      </view>
      <view style='font-size:30rpx;color:#f00;padding:20rpx 0;width:85%;border-bottom:1rpx solid #efefef'>{{item.nickname}}</view>
    </view>
  </block>
</view>

<view class='bottom'>
  <view style='width:50%;display:flex;align-items:center;justify-content:center;'>
    <image src='../../../image/pinglun.png' style='width:50rpx;height:50rpx;'></image>
    <text style='font-size:35rpx;color:#666;'>评论</text>
  </view>
  <view style='width:50%;display:flex;align-items:center;justify-content:center;'>
    <image src='../../../image/dianzan.png' style='width:50rpx;height:50rpx;'></image>
    <text style='font-size:35rpx;color:#666;'>赞</text>
  </view>
</view>