/* pages/discover/contentDetail/contentDetail.wxss */
page{
  background: #f0f0f0;
}
.showItem{
  display:flex;
  flex-direction:column;
  margin-top: 10rpx;
  background:#fff;
  width:100%;
  height:auto;
}
.userInfo{
  width:90%;
  height:80rpx;
  margin:20rpx 0 20rpx 5%;
  display:flex;
  flex-direction:row;
  border-bottom: 1rpx solid #efefef
}
.avatar{
  width:60rpx;
  height:60rpx;
  margin-right:20rpx;
  border-radius:50%;
}
.right-info{
  display:flex;
  flex-direction:column;
  height:100%;
}
.nickname{
  font-size:30rpx;
  color:#000;
}
.time{
  font-size:20rpx;
  color:#666;
}
.itemTitle{
  color:#000;
  font-size:40rpx;
  font-weight:bold;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.itemContent{
  color:#000;
  font-size:30rpx;
  word-break: break-all;
}
.box{
  width:100%;
  height:80rpx;
  margin-top:20rpx;
  display:flex;
  align-items:center;
  background:#fff;
}
.selected{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  padding: 10rpx 0;
  border-bottom: 5rpx solid #ffcc00;
}
.normal{
  font-size: 30rpx;
  color: #c0c0c0;
  padding: 10rpx 0;
}
.bottom{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  background: #fcfcfc;
  display: flex;
  align-items: center;
  width: 100%;
}
.bg_grey{
  background: #f6f6f6;
}